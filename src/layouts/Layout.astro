---
import Header from "../components/Header.astro";
import BackButton from "../components/BackButton.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";
interface Props {
  title: string;
  description: string;
}
import { ViewTransitions } from "astro:transitions";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={"/favicon.svg"} />
    <meta name="generator" content={Astro.generator} />
    <title>Ignacio Escudero â€¢ {title}</title>
    <ViewTransitions />
  </head>
  <body
    class="text-neutral-950 dark:text-neutral-50 bg-neutral-200 dark:bg-neutral-950"
  >
    <Header>
      <slot name="header">
        <BackButton />
      </slot>
    </Header>
    <slot />

    <Footer />

    <style is:global>
      :root {
        color-scheme: light dark;
        --rotateX: 0;
        --rotateY: 0;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        display: flex;
        flex-direction: column;
        place-content: center;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      .animation-reveal {
        animation: reveal 0.8s ease-in-out both;
      }

      .animation-reveal-scroll {
        animation: reveal linear both;
        animation-timeline: view();
        animation-duration: 1ms;
        animation-range: entry 20% cover 40%;
      }

      .animation-delay-1 {
        animation-delay: 0.1s;
      }

      .animation-delay-2 {
        animation-delay: 0.2s;
      }

      .animation-delay-3 {
        animation-delay: 0.3s;
      }

      .animation-delay-4 {
        animation-delay: 0.4s;
      }

      .animation-delay-5 {
        animation-delay: 0.5s;
      }

      .animation-delay-6 {
        animation-delay: 0.6s;
      }

      .animation-delay-7 {
        animation-delay: 0.7s;
      }

      .animation-delay-8 {
        animation-delay: 0.8s;
      }

      .animation-delay-9 {
        animation-delay: 0.9s;
      }

      .animation-delay-10 {
        animation-delay: 1s;
      }

      .gradientText {
        @apply bg-gradient-to-r  from-red-600 to-blue-600 dark:from-red-400 dark:to-indigo-500   text-transparent bg-clip-text;
      }

      .animation-backgroundShift {
        background-size: 200%;
        background-position: left;
        animation: backgroundShift 4s infinite ease-in-out;
      }

      .animation-shake {
        animation: shake 1.1s cubic-bezier(0.455, 0.03, 0.515, 0.955) 0.7s both;
      }

      .animation-float {
        animation: float 1s ease-in-out infinite;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @keyframes reveal-background {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }

      @keyframes backgroundShift {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      @keyframes reveal {
        from {
          opacity: 0;
          scale: 0.8;
          transform: translateY(100px);
        }
        to {
          opacity: 1;
          scale: 1;
          transform: translateY(0);
        }
      }

      @keyframes fade-in {
        from {
          scale: 0;
          opacity: 0;
        }
        to {
          scale: 1;
          opacity: 1;
        }
      }

      @keyframes slide-right {
        from {
          transform: translateX(100%);
        }
        to {
          transform: translateX(0);
        }
      }

      @keyframes grow {
        from {
          opacity: 0;
          scale: 0;
        }
      }

      @keyframes glow {
        to {
          scale: 0.9;
        }
      }

      @keyframes float {
        "0%" {
          transform: "translateY(0)";
        }
        "50%" {
          transform: "translateY(-10px)";
        }
        "100%" {
          transform: "translateY(0)";
        }
      }

      @keyframes shake {
        0%,
        100% {
          transform: rotate(0deg);
          transform-origin: 50% 100%;
        }
        10% {
          transform: rotate(2deg);
        }
        20%,
        40%,
        60% {
          transform: rotate(-4deg);
        }
        30%,
        50%,
        70% {
          transform: rotate(4deg);
        }
        80% {
          transform: rotate(-2deg);
        }
        90% {
          transform: rotate(2deg);
        }
      }
    </style>

    <script
      is:inline
      src="https://flackr.github.io/scroll-timeline/dist/scroll-timeline.js"
    ></script>
  </body>
</html>
