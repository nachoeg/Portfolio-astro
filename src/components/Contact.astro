---
import LinkedIn from "../icons/LinkedIn.astro";
import Curriculum from "../icons/Curriculum.astro";
import Github from "../icons/Github.astro";
import Mail from "../icons/MailSend.astro";
import LinkButton from "../components/LinkButton.astro";
---

<div
  class="parent w-full h-96 gap-2 p-2 rounded-3xl bg-black/5 dark:bg-white/5 text-black dark:text-white animate-on-scroll"
>
  <div class="child animate-on-scroll">
    <LinkButton
      brighter
      expand
      rounded
      target="_blank"
      rel="noopener"
      href="mailto:ignacioescuderogonzalez@gmail.com"
    >
      <Mail class="size-7 sm:size-9" />
      <span class="text-2xl">Email</span>
    </LinkButton>
  </div>
  <div class="child animate-on-scroll">
    <LinkButton disabled expand rounded href="/">
      <Curriculum class="size-7 sm:size-9" />
      <span class="text-2xl">Curriculum</span>
    </LinkButton>
  </div>
  <div class="child animate-on-scroll">
    <LinkButton
      brighter
      expand
      rounded
      target="_blank"
      rel="noopener"
      href="https://www.linkedin.com/in/ignacio-escudero-gonzalez/"
    >
      <LinkedIn class="size-7 sm:size-9" />
      <span class="text-2xl">LinkedIn</span>
    </LinkButton>
  </div>
  <div class="child animate-on-scroll">
    <LinkButton
      brighter
      expand
      rounded
      target="_blank"
      rel="noopener"
      href="https://github.com/nachoeg"
    >
      <Github class="size-7 sm:size-8" />
      <span class="text-2xl">GitHub</span>
    </LinkButton>
  </div>
</div>

<style>
  .parent {
    @apply sm:grid flex flex-col;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(4, 1fr);
  }

  .parent .child:nth-child(1) {
    grid-area: 1 / 1 / 5 / 3;
    flex-grow: 1;
    /* border: 1px red solid; */
  }
  .parent .child:nth-child(2) {
    grid-area: 1 / 3 / 3 / 5;
    flex-grow: 1;
    /* border: 1px blue solid; */
  }
  .parent .child:nth-child(3) {
    grid-area: 3 / 3 / 5 / 4;
    flex-grow: 1;
    /* border: 1px yellow solid; */
  }
  .parent .child:nth-child(4) {
    grid-area: 3 / 4 / 5 / 5;
    flex-grow: 1;
    /* border: 1px green solid; */
  }
</style>
