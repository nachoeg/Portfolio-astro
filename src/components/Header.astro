---
import ThemeToggle from "./ThemeToggle.astro";
import LanguageToggle from "./LanguageToggle.astro";
---

<header
  class="fixed min-h-12 sm:min-h-14 top-0 z-50 flex items-center self-center justify-center mx-auto mt-2 sm:mt-5 backdrop-blur shadow-xl text-neutral-700 dark:text-neutral-400 p-2 rounded-full sm:gap-1 bg-neutral-200/60 dark:bg-neutral-950/70"
>
  <slot />
  <ThemeToggle />
  <LanguageToggle />
</header>

<style>
  header {
    animation:
      nav-background linear both,
      reveal-down 1s cubic-bezier(0.72, 0, 0.12, 1) both;
    animation-timeline: scroll(), auto;
    animation-range:
      0 100px,
      normal;
  }
</style>
