---
import ThemeToggle from "./ThemeToggle.astro";
import LanguageToggle from "./LanguageToggle.astro";
---

<header
  class="fixed min-h-12 sm:min-h-14 top-0 z-50 flex items-center self-center justify-center mx-auto mt-2 sm:mt-5 backdrop-blur shadow-xl text-neutral-700 dark:text-neutral-400 p-2 rounded-full sm:gap-2 bg-white/50 dark:bg-neutral-800/50"
  transition:animate="fade"
>
  <slot />
  <ThemeToggle />
  <LanguageToggle />
</header>

<style>
  header {
    width: fit-content;
    left: 100;
    right: 100;
    animation: nav-background 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-background {
    from {
      box-shadow: none;
      background-color: transparent;
    }
  }
</style>
