---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import AboutMe from "../components/About.astro";
import Contact from "../components/Contact.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Mail from "../icons/Mail.astro";
import Profile from "../icons/Profile.astro";
import CodeIcon from "../icons/Code.astro";
import LinkButton from "../components/LinkButton.astro";
import Arrow from "../icons/Arrow.astro";
import BackgroundGradient from "../components/BackgroundGradient.astro";
import NavTabs from "../components/NavTabs.astro";
---

<Layout title="Portfolio" description="Desarrollador web fullstack">
  <Fragment slot="header">
    <NavTabs />
  </Fragment>
  <BackgroundGradient />
  <main class="mx-4">
    <SectionContainer id="hero">
      <Hero />
    </SectionContainer>

    <SectionContainer id="projects">
      <div class="flex justify-between animation-reveal-scroll">
        <SectionTitle>
          <CodeIcon class="size-7" />
          Proyectos
        </SectionTitle>
        <LinkButton href="/projects">
          <Arrow class="size-6" />
          <span class="hidden xs:block">Ver todos</span>
        </LinkButton>
      </div>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about">
      <SectionTitle>
        <Profile class="size-8" />
        Sobre m√≠
      </SectionTitle>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="contact">
      <SectionTitle>
        <Mail class="size-7" />
        Contacto
      </SectionTitle>
      <Contact />
    </SectionContainer>
  </main>
</Layout>
